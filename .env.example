# AI Vulnerability Scanner Environment Variables
# Copy this file to .env and fill in your API keys

# OpenAI API Key (for AI-powered analysis)
OPENAI_API_KEY=your_openai_api_key_here

# Google Gemini API Key (alternative AI provider)
GEMINI_API_KEY=your_gemini_api_key_here

# Shodan API Key (for external reconnaissance)
SHODAN_API_KEY=your_shodan_api_key_here

# Vulners API Key (for vulnerability database lookups)
VULNERS_API_KEY=your_vulners_api_key_here

# VirusTotal API Key (for malware analysis)
VIRUSTOTAL_API_KEY=your_virustotal_api_key_here

# SecurityTrails API Key (for domain intelligence)
SECURITYTRAILS_API_KEY=your_securitytrails_api_key_here

# HaveIBeenPwned API Key (for breach checking)
HIBP_API_KEY=your_hibp_api_key_here

# Censys API ID and Secret (for internet-wide scanning)
CENSYS_API_ID=your_censys_api_id_here
CENSYS_API_SECRET=your_censys_api_secret_here

# AlienVault OTX API Key (for threat intelligence)
OTX_API_KEY=your_otx_api_key_here

# IBM X-Force Exchange API Key and Password
XFORCE_API_KEY=your_xforce_api_key_here
XFORCE_API_PASSWORD=your_xforce_api_password_here

# Cloudflare API Key (for WAF integration)
CLOUDFLARE_API_KEY=your_cloudflare_api_key_here
CLOUDFLARE_EMAIL=your_cloudflare_email_here

# AWS Credentials (for cloud scanning)
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
AWS_REGION=us-east-1

# Azure Credentials (for cloud scanning)
AZURE_TENANT_ID=your_azure_tenant_id_here
AZURE_CLIENT_ID=your_azure_client_id_here
AZURE_CLIENT_SECRET=your_azure_client_secret_here

# Google Cloud Credentials (for cloud scanning)
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/credentials.json

# Docker Hub Credentials (for container scanning)
DOCKER_USERNAME=your_docker_username_here
DOCKER_PASSWORD=your_docker_password_here

# Output Directory (where scan results are saved)
OUTPUT_DIR=scans

# Default Scan Type (basic, comprehensive, container, cloud)
DEFAULT_SCAN_TYPE=basic

# Enable/Disable Features (true/false)
ENABLE_AI_ANALYSIS=true
ENABLE_NETWORK_MAPPING=true
ENABLE_EXPLOIT_GENERATION=true

# Logging Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Proxy Settings (optional)
HTTP_PROXY=
HTTPS_PROXY=
NO_PROXY=localhost,127.0.0.1
