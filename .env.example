# AI Vulnerability Scanner Environment Variables
# Copy this file to .env and fill in your API keys

# OpenAI API Key (for AI-powered analysis)
OPENAI_API_KEY=your_openai_api_key_here

# Google Gemini API Key (alternative AI provider)
GEMINI_API_KEY=your_gemini_api_key_here

# Shodan API Key (for external reconnaissance)
SHODAN_API_KEY=your_shodan_api_key_here

# Vulners API Key (for vulnerability database lookups)
VULNERS_API_KEY=your_vulners_api_key_here

# Output Directory (where scan results are saved)
OUTPUT_DIR=scans

# Default Scan Type (basic, comprehensive, container, cloud)
DEFAULT_SCAN_TYPE=basic

# Enable/Disable Features (true/false)
ENABLE_AI_ANALYSIS=true
ENABLE_NETWORK_MAPPING=true
ENABLE_EXPLOIT_GENERATION=true

# Logging Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
